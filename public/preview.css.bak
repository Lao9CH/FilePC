/* Mobile Optimizations */
@media (max-width: 768px) {
    .preview-nav-btn {
        width: 50px;
        height: 50px;
        font-size: 24px;
    }

    .preview-nav-btn.prev {
        left: 10px;
    }

    .preview-nav-btn.next {
        right: 10px;
    }

    .preview-filmstrip {
        height: 100px;
        padding: 10px 15px;
    }

    .filmstrip-item {
        height: 70px;
        width: 70px;
        min-width: 70px;
    }

    .control-btn {
        padding: 10px 16px;
        font-size: 14px;
    }

    .preview-controls {
        top: 10px;
        right: 10px;
    }

    .fullscreen-slogan {
        font-size: 28px;
        padding: 12px;
        letter-spacing: 2px;
    }

    .exit-fullscreen-btn {
        bottom: 20px;
        right: 20px;
        padding: 14px 28px;
        font-size: 16px;
        min-width: 140px;
        min-height: 50px;
        touch-action: manipulation;
    }

    /* Larger touch targets for mobile */
    .preview-nav-btn {
        min-width: 56px;
        min-height: 56px;
        touch-action: manipulation;
    }

    .filmstrip-item {
        min-width: 80px;
        min-height: 80px;
        touch-action: manipulation;
    }

    /* Better spacing on mobile */
    .preview-main-area {
        padding: 10px;
    }

    .image-counter {
        bottom: 120px;
        font-size: 16px;
        padding: 10px 24px;
    }
}

/* Extra small devices (phones in portrait) */
@media (max-width: 480px) {
    .fullscreen-slogan {
        font-size: 20px;
        padding: 10px;
        letter-spacing: 1px;
    }

    .exit-fullscreen-btn {
        bottom: 15px;
        right: 15px;
        padding: 12px 20px;
        font-size: 14px;
        min-width: 120px;
    }

    .exit-fullscreen-btn i {
        font-size: 16px;
    }

    .preview-nav-btn {
        width: 44px;
        height: 44px;
        font-size: 20px;
    }

    .preview-filmstrip {
        height: 80px;
        padding: 8px 10px;
    }

    .filmstrip-item {
        height: 60px;
        width: 60px;
        min-width: 60px;
    }
}

/* Landscape mode on mobile */
@media (max-width: 768px) and (orientation: landscape) {
    .fullscreen-slogan {
        font-size: 24px;
        padding: 8px;
    }

    .exit-fullscreen-btn {
        bottom: 15px;
        right: 15px;
        padding: 10px 20px;
        font-size: 14px;
    }

    .preview-filmstrip {
        height: 80px;
    }

    .filmstrip-item {
        height: 60px;
        width: 60px;
        min-width: 60px;
    }

    .image-counter {
        bottom: 100px;
        font-size: 14px;
    }
}

/* Prevent text selection on touch devices */
.preview-content,
.fullscreen-slogan,
.exit-fullscreen-btn,
.preview-nav-btn,
.filmstrip-item {
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -webkit-tap-highlight-color: transparent;
}

/* Smooth scrolling for filmstrip on touch devices */
.preview-filmstrip {
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
}

/* Better touch feedback */
.exit-fullscreen-btn:active,
.preview-nav-btn:active,
.control-btn:active,
.filmstrip-item:active {
    opacity: 0.8;
}